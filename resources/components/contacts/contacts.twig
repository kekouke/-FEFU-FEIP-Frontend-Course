{% import _self as macros %}

{% set scope = {
    phone: '+7 (900) 900-90-90',
    email: 'info@gmal.com',
    location: 'г. Владивосток<br>ул. Выселковая 49, стр. 3',
} %}

{% macro content(scope) %}
    <div class="ContactsSection">
        <div>
            <a href="tel:{{ scope.phone }}" class="ContactsItem">
                <img class="ContactsItem__icon"
                     src="{{ 'assets/icons/phoneWhite-1x.svg' }}" 
                     alt="" width="24" height="14">
                {{ scope.phone }}
            </a>
        </div>
        <div>
            <a href="tel:{{ scope.phone }}" class="ContactsItem">
                <img class="ContactsItem__icon"
                     src="{{ 'assets/icons/emailWhite-1x.svg' }}" 
                     alt="" width="24" height="14">
                {{ scope.email }}
            </a>
        </div>
        <div>
            <span class="ContactsItem">
                <img class="ContactsItem__icon"
                     src="{{ 'assets/icons/locationWhite-1x.svg' }}" 
                     alt="" width="24" height="14">
                {{ scope.location|raw }}
            </span>
        </div>
    </div>
{% endmacro %}

{{ macros.content(scope) }}